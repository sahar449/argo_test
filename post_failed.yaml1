apiVersion: batch/v1
kind: Job
metadata:
  name: nginx-posthook-failed
  namespace: default
  annotations:
    argocd.argoproj.io/hook: SyncFail
spec:
  template:
    spec:
      containers:
      - name: posthook-failed
        image: busybox
        command: ["/bin/sh", "-c"]
        args:
          - |
            echo "‚ùå PostSync Hook - FAILED"
            exit 1
      restartPolicy: Never
  backoffLimit: 0